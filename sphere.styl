 */

font-size = 15
EM = font-size*1 em

column = 53

gutter = 27

/*
 * Column-widths in variables, in EMs
 */

/*cols1  = ( 1 * (column + gutter) - gutter) / EM
col1   = 1cols
cols2  = ( 2 * (column + gutter) - gutter) / EM
cols3  = ( 3 * (column + gutter) - gutter) / EM
cols4  = ( 4 * (column + gutter) - gutter) / EM
cols5  = ( 5 * (column + gutter) - gutter) / EM
cols6  = ( 6 * (column + gutter) - gutter) / EM
cols7  = ( 7 * (column + gutter) - gutter) / EM
cols8  = ( 8 * (column + gutter) - gutter) / EM
cols9  = ( 9 * (column + gutter) - gutter) / EM
cols10 = (10 * (column + gutter) - gutter) / EM
cols11 = (11 * (column + gutter) - gutter) / EM
cols12 = (12 * (column + gutter) - gutter) / EM
cols13 = (13 * (column + gutter) - gutter) / EM
cols14 = (14 * (column + gutter) - gutter) / EM
cols15 = (15 * (column + gutter) - gutter) / EM
cols16 = (16 * (column + gutter) - gutter) / EM*/

cols1  = ( 1 * (column + gutter) - gutter) px
col1   = 1cols
cols2  = ( 2 * (column + gutter) - gutter) px
cols3  = ( 3 * (column + gutter) - gutter) px
cols4  = ( 4 * (column + gutter) - gutter) px
cols5  = ( 5 * (column + gutter) - gutter) px
cols6  = ( 6 * (column + gutter) - gutter) px
cols7  = ( 7 * (column + gutter) - gutter) px
cols8  = ( 8 * (column + gutter) - gutter) px
cols9  = ( 9 * (column + gutter) - gutter) px
cols10 = (10 * (column + gutter) - gutter) px
cols11 = (11 * (column + gutter) - gutter) px
cols12 = (12 * (column + gutter) - gutter) px
cols13 = (13 * (column + gutter) - gutter) px
cols14 = (14 * (column + gutter) - gutter) px
cols15 = (15 * (column + gutter) - gutter) px
cols16 = (16 * (column + gutter) - gutter) px

/*
 * Column-widths in a function, in EMs
 */

cols(cols)
    width ((cols * (column + gutter) - gutter) / EM)


/*
 * Vertical grid
 */

line-height = 20
line-height-px = 20px
LEM = line-height/font-size em

font-height(fsize)
    font-size (fsize/EM)
    line-height ((ceil(fsize/font-size) * line-height) px)

font-lines(fsize)
    ((ceil(fsize/font-size) * line-height) px)

getPadding(fsize)
    lines = ceil(fsize/font-size)
    h = lines * line-height px
    (h - fsize) / 2

/*baseline-adjust(origFsize, fsize)
