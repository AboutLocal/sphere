    //padding-bottom pad + (origFsize/2 - pad/2) px
    padding-bottom pad px
    padding-top ((ceil(fsize/font-size) * line-height) - pad - (origFsize/2) px)*/



/*
 * Line-hieghts in variables
 */

/*
lines1  = (1 * LEM)
line    = lines1
lines2  = (2 * LEM)
lines3  = (3 * LEM)
lines4  = (4 * LEM)
lines5  = (5 * LEM)
lines6  = (6 * LEM)
lines7  = (7 * LEM)
lines8  = (8 * LEM)
lines9  = (9 * LEM)
lines10 = (10 * LEM)
lines11 = (11 * LEM)
lines12 = (12 * LEM)
lines13 = (13 * LEM)
lines14 = (14 * LEM)
lines15 = (15 * LEM)
lines16 = (16 * LEM)
*/

lines1  = (1 * line-height) px
line    = lines1
lines2  = (2 * line-height) px
lines3  = (3 * line-height) px
lines4  = (4 * line-height) px
lines5  = (5 * line-height) px
lines6  = (6 * line-height) px
