    box-sizing content-box

.ie input
    line-height line-height px


input[type="text"]:focus
    border-color green3


button, input[type="button"]
    //pie()
    font-weight semibold
    font-size (13/EM)
    text-shadow rgba(0,0,0,0.2) 0 1px 2px
    cursor pointer
    //position relative
    background-color blue2 * 1.2

    border 1px solid blue2
    color white
    border-radius 3px
    box-shadow inset 0 1px 0 0 rgba(255,255,255,0.2), 0 2px 4px gray4

    intensity = 0.1

    background-image -moz-linear-gradient(top, rgba(255,255,255,intensity) 0%, rgba(0,0,0,intensity) 100%) /* FF3.6+ */
    background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,255,255,intensity)), color-stop(100%,rgba(0,0,0,intensity))) /* Chrome,Safari4+ */
    background-image -webkit-linear-gradient(top, rgba(255,255,255,intensity) 0%,rgba(0,0,0,intensity) 100%) /* Chrome10+,Safari5.1+ */
    background-image -o-linear-gradient(top, rgba(255,255,255,intensity) 0%,rgba(0,0,0,intensity) 100%) /* Opera 11.10+ */
    background-image -ms-linear-gradient(top, rgba(255,255,255,intensity) 0%,rgba(0,0,0,intensity) 100%) /* IE10+ */
    background-image linear-gradient(to bottom, rgba(255,255,255,intensity) 0%,rgba(0,0,0,intensity) 100%) /* W3C */

    duration = 0.1s

    -webkit-transition all duration ease-in-out
    -moz-transition all duration ease-in-out
    -o-transition all duration ease-in-out
    transition all duration ease-in-out
    &:hover
        border-color #72ad16
        background-color green2 * 1.3
    &:active
        background-image -moz-linear-gradient(top, rgba(0,0,0,intensity) 0%, rgba(255,255,255,intensity) 100%) /* FF3.6+ */
        background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,intensity)), color-stop(100%,rgba(255,255,255,intensity))) /* Chrome,Safari4+ */
        background-image -webkit-linear-gradient(top, rgba(0,0,0,intensity) 0%,rgba(255,255,255,intensity) 100%) /* Chrome10+,Safari5.1+ */
        background-image -o-linear-gradient(top, rgba(0,0,0,intensity) 0%,rgba(255,255,255,intensity) 100%) /* Opera 11.10+ */
        background-image -ms-linear-gradient(top, rgba(0,0,0,intensity) 0%,rgba(255,255,255,intensity) 100%) /* IE10+ */
        background-image linear-gradient(to bottom, rgba(0,0,0,intensity) 0%,rgba(255,255,255,intensity) 100%) /* W3C */



